<resources>

<style name="AppTheme" parent="@android:style/Theme.Holo.Light">
    <item name="android:actionBarStyle">@style/MyActionBar</item>
	<item name="android:actionOverflowButtonStyle">@style/OverFlow</item>
    <item name="android:windowContentOverlay">@null</item>
</style>

<style name="AppTheme2" parent="@android:style/Theme.Holo.Light">
    <item name="android:actionBarStyle">@style/MyActionBar</item>
	<item name="android:actionOverflowButtonStyle">@style/OverFlow</item>
    <item name="android:windowContentOverlay">@null</item>
</style>




<style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
    <item name="android:background">@drawable/ab_solid_actionbar</item>


</style>

<!-- Sets my custom white overflow button to use Holo.Light. -->
<style name="OverFlow" parent="@android:style/Widget.Holo.ActionButton.Overflow">
    <item name="android:src">@drawable/overflowdraw</item>
</style>

<!-- FadingActionBar Stuff -->
    <style name="Widget" />
    
    <style name="Widget.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse" />
    
    <style name="Widget.Light" />
    
    <style name="Widget.Light.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid" />

    <style name="Widget.ActionBar.Transparent">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Widget.Light.ActionBar.Transparent">
        <item name="android:background">@android:color/transparent</item>

    </style>
    
        
    </resources>